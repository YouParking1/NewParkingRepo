<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="clink.youparking.AchievementFragment"
    android:padding="16dp"
    android:background="@drawable/notebackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements_title"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary"
        android:id="@+id/achievementsTitle"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <include layout="@layout/achievement1" />
        <include layout="@layout/achievement2" />
        <include layout="@layout/achievement3" />
    </LinearLayout>

</LinearLayout>
