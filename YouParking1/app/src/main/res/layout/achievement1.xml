<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/achievement1layout"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Hold 5 Spots"
        android:id="@+id/hold5SpotsText"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/knownAchievement1"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_hold_5"
        android:onClick="goToAchievements"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/unknownAchievement1"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_unknown"
        android:onClick="goToAchievements" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/achievement1_progress"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            android:text="0" />
        <TextView
            android:id="@+id/achievement1_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            android:text=" / "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/achievement1_goal"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            android:text="5" />

    </LinearLayout>

</LinearLayout>